# =============================================================================
# ForgeStream â€” Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------
ENV=development
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Supabase
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# -----------------------------------------------------------------------------
# GitHub OAuth
# -----------------------------------------------------------------------------
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:3000/api/auth/callback/github

# -----------------------------------------------------------------------------
# LLM Providers
# -----------------------------------------------------------------------------
# OpenAI
LLM_OPENAI_API_KEY=your-openai-api-key
LLM_OPENAI_ORG_ID=your-openai-org-id

# Anthropic (Claude)
LLM_ANTHROPIC_API_KEY=your-anthropic-api-key

# Google (Gemini)
LLM_GEMINI_API_KEY=your-google-api-key

# Ollama (local)
LLM_OLLAMA_BASE_URL=http://localhost:11434

# Default LLM provider: openai | anthropic | gemini | ollama
DEFAULT_LLM_PROVIDER=openai

# -----------------------------------------------------------------------------
# Next.js (public vars must be prefixed with NEXT_PUBLIC_)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
