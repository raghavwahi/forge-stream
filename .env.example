# =============================================================================
# ForgeStream â€” Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------
ENV=development
LOG_LEVEL=info
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# PostgreSQL
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=forge
DB_PASSWORD=forge
DB_NAME=forgestream
DB_MIN_POOL_SIZE=5
DB_MAX_POOL_SIZE=20

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# -----------------------------------------------------------------------------
# JWT
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=your-256-bit-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# SMTP (Password Reset Emails)
# -----------------------------------------------------------------------------
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@forgestream.dev
SMTP_USE_TLS=false

# -----------------------------------------------------------------------------
# GitHub OAuth
# -----------------------------------------------------------------------------
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:3000/api/auth/callback/github

# -----------------------------------------------------------------------------
# LLM Providers
# -----------------------------------------------------------------------------
# OpenAI
LLM_OPENAI_API_KEY=your-openai-api-key
LLM_OPENAI_ORG_ID=your-openai-org-id

# Anthropic (Claude)
LLM_ANTHROPIC_API_KEY=your-anthropic-api-key

# Google (Gemini)
LLM_GEMINI_API_KEY=your-google-api-key

# Ollama (local)
LLM_OLLAMA_BASE_URL=http://localhost:11434

# -----------------------------------------------------------------------------
# Next.js (public vars must be prefixed with NEXT_PUBLIC_)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
